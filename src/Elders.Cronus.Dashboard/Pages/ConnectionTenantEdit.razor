@page "/connection/{ConnectionName}/{Tenant}"
@inherits OAuthBase
@inject AppState App
@inject CronusClient Cronus

<h1>Edit Tenant</h1>

<fieldset>
    <MatTextField @bind-Value="@Tenant" Label="Tenant" FullWidth="true" Required="true"></MatTextField>
    <MatTextField @bind-Value="@ServerEndpoint" Label="Server" FullWidth="true" Required="true"></MatTextField>
    <MatTextField @bind-Value="@Client" Label="Client" FullWidth="true" Required="true"></MatTextField>
    <MatTextField @bind-Value="@Secret" Label="Secret" FullWidth="true" Required="true" Type="password"></MatTextField>
    <MatTextField @bind-Value="@Scope" Label="Scope" FullWidth="true" Required="true"></MatTextField>
</fieldset>

<MatButton Outlined="true" TrailingIcon="save" OnClick="@(async () => await EditTenant())">Update</MatButton>
