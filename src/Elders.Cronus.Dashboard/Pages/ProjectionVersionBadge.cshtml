
@if (LiveVersion is null == false)
{
    <span class="badge badge-success">@ProjectionStatus.Live</span>
}

@if (Version.Status == ProjectionStatus.Live && LiveVersion.Revision != Version.Revision)
{
    <span class="badge badge-success">@ProjectionStatus.Live</span>
}
else if (Version.Status == ProjectionStatus.Building)
{
    <span class="badge badge-primary">@ProjectionStatus.Building</span>
}
else if (Version.Status == ProjectionStatus.NotPresent)
{
    <span class="badge badge-secondary">@ProjectionStatus.NotPresent</span>
}
else if (Version.Status == ProjectionStatus.Timedout)
{
    <span class="badge badge-danger">@ProjectionStatus.Timedout</span>
}
else if (Version.Status == ProjectionStatus.Canceled)
{
    <span class="badge badge-dark">@ProjectionStatus.Canceled</span>
}

@functions{

    [Parameter]
    protected ProjectionVersion Version { get; set; }

    [Parameter]
    protected ProjectionVersion LiveVersion { get; set; }
}
